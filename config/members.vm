#macro( box )
<span class="box">4</span>
#end
#macro( checkedBox )
<span class="box">3</span>
#end
#macro( largeBox )
<span class="largeBox">4</span>
#end
#macro( largeCheckedBox )
<span class="largeBox">3</span>
#end
<body bgcolor="#FFFFFF" text="#000000">
<div class="paper">
    <p class="headingTitle" align="center">Members</p>
    <p align="center" style="padding-bottom: 0.5cm;">
        <span class="roleName">
            <b><i>
                Date: $date
            </i></b>
        </span>
    </p>
    <table class="outsideStdTable">
	<tr><td>
	<table border="0" cellspacing="0" cellpadding="4" class="stdTable">
	<thead>
	<tr>
	    <th><b>Player</b></th>
	    <th><b>Role/s</b></th>
	    <th><b>Both&nbsp;Days</b></th>
	    <th><b>Payed</b></th>
	</tr>
	</thead>
	<tfoot>
	<tr>
	    <th><b>Player</b></th>
	    <th><b>Role/s</b></th>
	    <th><b>Both&nbsp;Days</b></th>
	    <th><b>Payed</b></th>
	</tr>
	</tfoot>
	#foreach($member in $members)
	#set($roles = $member.getRoles() )
	<tr>
	    <td valign="top">$member</td>
	    <td>
	        #if($roles.size() == 1)
	            #foreach($role in $roles)
	                #if($role.isGhoul() ) <i> #end
	                $role #if( $role.isSLP() ) (SLP) #end
	                #if($role.isGhoul() ) </i> #end
	            #end
	        #else
	            #foreach($role in $roles)
	                #box()
	                #if($role.isGhoul() ) <i> #end
	                $role #if( $role.isSLP() ) (SLP) #end
	                #if($role.isGhoul() ) </i> #end
	                 <br/>
	            #end
	        #end
	    </td>
	    <td align="center">
	        #largeBox()
	    </td>
	    <td align="center">
	        #largeBox()
	    </td>
	</tr>
	#end
	#foreach($i in [1..20])
	<tr>
	    <td valign="top">&nbsp;</td>
	    <td>
	        &nbsp;
	    </td>
	    <td align="center">
	        #largeBox()
	    </td>
	    <td align="center">
	        #largeBox()
	    </td>
	</tr>
	#end
	</table>
	</td></tr>
	</table>	
    <p align="center" style="padding-bottom: 0.5cm;">
        <span class="roleName">
            <b><i>
                Date: $date
            </i></b>
        </span>
    </p>
